@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Brello</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/home" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/transactions">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Add Transactions
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/debts">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Add debt
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/transactionDetails">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Transaction Details
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/debt-history">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Debt History
            </NavLink>
        </div>
    </nav>
    <div class="nav-item px-3 mb-4 align-content-center justify-content-center">
        <button class="btn btn-danger w-100 d-flex align-items-center justify-content-center text-center "
                style="margin-bottom: 20px; height: 50px;"
                @onclick="Logout">
            <span class="" aria-hidden="true"></span> Logout
        </button>
    </div>


</div>


@code
{
    private void Logout()
    {
        Navigation.NavigateTo("/");
    }
}